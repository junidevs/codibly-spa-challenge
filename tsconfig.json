{
  "compilerOptions": {
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "src",
    ".eslintrc",
    "./types/**/*.ts",
    "./types/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "vitest.config.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
